<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">42dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/title_button</item>
    </style>

    <style name="TitleRightImageButton" parent="ImageButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:minWidth">75dip</item>
    </style>

    <style name="SubContentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#939ea5</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ContentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">42dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/title_button</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:minWidth">75dip</item>
    </style>

    <style name="TitleLeftTextButton" parent="TextButton">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="TitleRightTextButton" parent="TextButton">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="TitleLeftBackButton">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">42dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/title_button_back</item>
        <item name="android:textColor">@android:color/background_light</item>
        <item name="android:minWidth">75dip</item>
    </style>

    <style name="MainTabButton">
        <item name="android:textSize">12.0dip</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/color_text</item>
        <item name="android:textColor">@color/main_tab_text</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0.70000005dip</item>
        <item name="android:layout_marginRight">0.70000005dip</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="iosWaitingDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="windowAnimation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/fade_in</item>
    </style>

    <style name="switcher">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <style name="iosDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/alert_dialog_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="listview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">#558ab6</item>
        <item name="android:dividerHeight">1dip</item>
        <item name="android:scrollbars">vertical</item>
    </style>
    
        <style name="xlistview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:listSelector">@drawable/list_selector</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">#558ab6</item>
        <item name="android:dividerHeight">1dip</item>
        <item name="android:scrollbars">vertical</item>
    </style>

</resources>