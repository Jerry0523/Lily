<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/welcome"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.6" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@drawable/title_background" >

            <ImageButton
                android:id="@+id/login_exit"
                style="@style/TitleLeftBackButton"
                android:contentDescription="@string/quit" />

            <Button
                android:id="@+id/login_submit"
                style="@style/TitleRightTextButton"
                android:text="@string/login" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:paddingLeft="10dip" >

        <EditText
            android:id="@+id/login_username"
            style="@style/RoundListBody"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundlist_top"
            android:hint="@string/login_hint"
            android:inputType="textNoSuggestions"
            android:paddingBottom="5dip"
            android:textColorHint="@color/holo" />

        <EditText
            android:id="@+id/login_password"
            style="@style/RoundListBody"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundlist_bottom"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingTop="5dip"
            android:textColorHint="@color/holo" />
    </LinearLayout>

</LinearLayout>