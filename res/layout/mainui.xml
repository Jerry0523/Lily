<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_background" >

        <ImageButton
            android:id="@+id/all_board"
            style="@style/ImageButton"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/all_board"
            android:minWidth="75dip"
            android:src="@drawable/all_board"
            android:visibility="gone" />

        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textIsSelectable="false"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/top_set"
            style="@style/TitleRightImageButton"
            android:contentDescription="@string/set"
            android:src="@drawable/set_grey" />

        <ImageButton
            android:id="@+id/board_edit"
            style="@style/TitleRightImageButton"
            android:contentDescription="@string/delete_pic"
            android:src="@drawable/new_element"
            android:visibility="gone" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/v_Pager"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:background="@android:color/white" />

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/tab_background"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingTop="5.0dip" >

        <RadioButton
            android:id="@+id/top"
            style="@style/MainTabButton"
            android:checked="true"
            android:drawableTop="@drawable/tab_top"
            android:text="@string/top_short" />

        <RadioButton
            android:id="@+id/board"
            style="@style/MainTabButton"
            android:drawableTop="@drawable/tab_board"
            android:text="@string/board" />

        <RadioButton
            android:id="@+id/hot"
            style="@style/MainTabButton"
            android:drawableTop="@drawable/tab_hot"
            android:text="@string/hot" />

        <RadioButton
            android:id="@+id/center"
            style="@style/MainTabButton"
            android:drawableTop="@drawable/tab_center"
            android:text="@string/information" />
    </RadioGroup>

</LinearLayout>