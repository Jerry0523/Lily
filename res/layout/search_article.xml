<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mask_body"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/title_background" >

        <ImageButton
            android:id="@+id/search_back"
            style="@style/TitleLeftBackButton"
            android:contentDescription="@string/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/search_back"
            android:text="@string/search_article"
            android:textSize="20sp" />

        <Button
            android:id="@+id/search_submit"
            style="@style/TitleRightTextButton"
            android:text="@string/search" />
    </RelativeLayout>

    <TextView
        style="@style/NewsPaperTitleText"
        android:layout_marginLeft="10dip"
        android:text="过滤条件" />

    <EditText
        android:id="@+id/search_author"
        style="@style/RoundListBody"
        android:layout_marginLeft="10dip"
        android:background="@drawable/roundlist_top"
        android:hint="文章作者"
        android:inputType="text"
        android:paddingBottom="5dip" />

    <EditText
        android:id="@+id/search_title"
        style="@style/RoundListBody"
        android:layout_marginLeft="10dip"
        android:background="@drawable/roundlist_center"
        android:hint="标题含有"
        android:inputType="text" />

    <EditText
        android:id="@+id/search_title2"
        style="@style/RoundListBody"
        android:layout_marginLeft="10dip"
        android:background="@drawable/roundlist_bottom"
        android:hint="标题不含"
        android:inputType="text"
        android:paddingTop="5dip" />

    <TextView
        style="@style/NewsPaperTitleText"
        android:layout_marginLeft="10dip"
        android:text="发帖时间" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/search_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@drawable/radio_button"
            android:textOff=""
            android:textOn="" />

        <TextView
            style="@style/NewsPaperContentText"
            android:text="一天" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/search_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@drawable/radio_button"
            android:textOff=""
            android:textOn="" />

        <TextView
            style="@style/NewsPaperContentText"
            android:text="一周" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/search_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@drawable/radio_button"
            android:checked="true"
            android:textOff=""
            android:textOn="" />

        <TextView
            style="@style/NewsPaperContentText"
            android:text="一月" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/search_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:background="@drawable/radio_button"
            android:textOff=""
            android:textOn="" />

        <TextView
            style="@style/NewsPaperContentText"
            android:text="一年" />
    </LinearLayout>

</LinearLayout>